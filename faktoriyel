#faktoriyel 1 fonksiyon ile faktoriel hesaplama 
def faktoriel(x):

    return 1\
        if (x == 1 or x == 0)\
        else x * faktoriel(x - 1)



num= int(input('Lütfen Faktöriyelini Hesaplamak İstediğini Sayını Giriniz : '))
print(str(num) + " Sayısının faktöriyeli  =  " + str(faktoriel(num)))

#input ile  faktoriyel alma

sayi=int(input("Lütfen Faktöriyelini Hesaplamak İstediğini Sayını Giriniz 1 : "))
sonuc=1
for i in range(1,sayi+1):
      sonuc=sonuc*i


      print(sayi,"sayısının faktöriyeli =",sonuc)
